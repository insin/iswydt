extends hero

append subtitle
  | Register

append style
  style

block content
  form(action='/register', method='POST')
    fields = form.boundFieldsObj()
    fieldset
      legend Register
      .clearfix
        != fields.username.labelTag()
        .input
          != fields.username
      .clearfix
        != fields.email.labelTag()
        .input
          != fields.email
      .clearfix
        != fields.password.labelTag()
        .input
          != fields.password
      .clearfix
        != fields.confirm.labelTag()
        .input
          != fields.confirm
      .actions
        input.btn.primary(type='submit', value='Register')
