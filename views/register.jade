extends hero

append subtitle
  | Register

append style
  style

block content
  include mixins/forms
  form(action='/register', method='POST')
    fields = form.boundFieldsObj()
    fieldset
      legend Register
      mixin formErrors(form)
      mixin field(fields.username)
      mixin field(fields.email)
      mixin field(fields.password)
      mixin field(fields.confirm)
      .actions
        input.btn.primary(type='submit', value='Register')
